<%- include("partials/header.ejs") %>

    <body>
        <%- include("partials/navbar.ejs") %>
            <div class="container">
                <hr>
                <h1>
                    <%= pergunta.titulo %>
                </h1>
                <p>
                    <%= pergunta.descricao %>
                </p>
                <hr>
                <h3>Responda</h3>
                <form method="POST" action="/salvarresposta">
                    <textarea class="form-control" name="resposta" id="resposta" cols="30" rows="10"
                        placeholder="Digite a resposta"></textarea>
                    <input type="hidden" name="perguntaid" value="<%= pergunta.id %>">
                    <br>
                    <button class="btn btn-primary" type="submit">Responder</button>
                </form>
                <% if(respostas !=undefined) { %>
                    <hr>
                    <h3>Respostas</h3>
                    <hr>
                    <% respostas.forEach((resposta)=>{ %>
                        <br>
                        <div class="card">
                            <dir class="card-body">
                                <p>
                                    <%= resposta.corpo %>
                                </p>
                            </dir>
                        </div>
                        <br>
                    <% }) %>
                <% } %>
            </div>
    </body>
    <%- include("partials/footer.ejs") %>